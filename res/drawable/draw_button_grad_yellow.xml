<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">

<!-- ボタンが押されていない状態 -->
<!-- フォーカスされていない状態 -->
	<item android:state_pressed="true"
			android:state_focused="false">
		<layer-list>
			<item>
			<shape 
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:shape="rectangle">
				<gradient 
				android:angle="270"
		        android:startColor="#daa520"
		        android:centerColor="#daa520" 
		        android:endColor="#fef91a"
				android:type="linear" />
				<corners 
					android:radius="4dip" />
				<!--stroke 
					android:width="2dip" 
					android:color="#000000"/-->
		    </shape>
			</item>
		</layer-list>
	</item>


	<item android:state_pressed="false"
			android:state_focused="false">
		<layer-list>
			<item>
			<shape 
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:shape="rectangle">
				<gradient 
				android:angle="270"
		        android:startColor="#fef91a"
		        android:centerColor="#fef91a" 
		        android:endColor="#daa520"
				android:type="linear" />
				<corners 
					android:radius="4dip" />
				<!--stroke 
					android:width="2dip" 
					android:color="#000000"/-->
		    </shape>
			</item>
		</layer-list>
	</item>
	
</selector>




